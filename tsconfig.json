{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es5","es6","es7","es2018","es2019","es2020","esnext", "dom", "ScriptHost", "dom.iterable"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}