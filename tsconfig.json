{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2015", "dom", "dom.iterable"],
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}